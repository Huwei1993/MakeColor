<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.shayne.makecolor.Property.PropertyMainActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <Button
        android:onClick="returnToSendmessage"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="返回上一界面"
        />
        <Button
            android:onClick="alphaClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="alpha"
            />
       <Button
           android:onClick="trans"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="位置移动"
           />
       <Button
           android:onClick="Scale"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="缩放"
           />
       <Button
           android:onClick="rotate"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="旋转"
           />

   </LinearLayout>



    <ImageView
        android:id="@+id/lv2"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image3"
        />
    <LinearLayout
        android:layout_below="@id/lv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="setAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全部变化"
            />

    </LinearLayout>
</RelativeLayout>
